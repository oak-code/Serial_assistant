<Window x:Class="WPFSerialAssistant.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSerialAssistant"
        mc:Ignorable="d" Name="AboutWindow"
        Title="关于YCOM" Height="200" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Icon="1.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="150*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="5">
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                串口调试助手
            </TextBlock>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center">
                Serial Assistant
            </TextBlock>
        </StackPanel>
        <Grid Grid.Row="1">
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock>版本编号：Verison 2.0</TextBlock>
                <TextBlock>更新日期：2018年03月5日</TextBlock>
                <TextBlock>软件作者：Oakco</TextBlock>
                <TextBlock>反馈邮箱：oakcode@outlook.com</TextBlock>
                <TextBlock>开源说明：开放源码，采用MIT协议。</TextBlock>
            </StackPanel>
        </Grid>
